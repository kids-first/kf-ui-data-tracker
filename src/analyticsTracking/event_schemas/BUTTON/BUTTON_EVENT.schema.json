{
  "$id": "http://kf-ui-data-tracker.kidsfirstdrc.org/scr/analyticsTracking/event_schemas/BUTTON/BUTTON_EVENT.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BUTTON__* common event schema properties",
  "description": "passed to all button events and derivatives",
  "type": "object",
  "definitions": {
    "button_text": {
      "$id": "#button_text",
      "type": "string",
      "description": "Text shown to the user at time of event."
    },
    "link": {
      "$id": "#link",
      "type": "string",
      "format": "uri",
      "description": "Button/Anchor [href] value"
    },
    "button_type": {
      "$id": "#button_type",
      "type": "string",
      "description": "If it is not an obvious button specify the type (label, toggle, icon, etc)"
    }
  },
  "properties": {
    "button_text": {
      "$ref": "#button_text"
    },
    "link": {
      "$ref": "#link"
    },
    "button_type": {
      "$ref": "#button_type"
    }
  }
}
