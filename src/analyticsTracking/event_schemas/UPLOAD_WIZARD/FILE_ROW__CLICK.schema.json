{
  "$id": "https://kf-ui-datatracker.kidsfirstdrc.org/event_schemas/FILE_ROW/FILE_ROW__CLICK.schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "FILE_ROW__CLICK",
  "type": "object",
  "description": "onClick event for a row in the UploadWizard DocumentSelectionStep component",
  "allOf": [
    {"$ref": "../common_defintions.json#/path"},
    {"$ref": "../common_defintions.json#/route"},
    {"$ref": "../common_defintions.json#/view"},
    {"$ref": "../common_defintions.json#/file"},
    {"$ref": "../BUTTON/button_defintions.json#/button_type"},
    {
      "properties": {
        "study": {
          "type": "object",
          "allOf": [
            {"$ref": "../common_defintions.json#/study"},
            {
              "properties": {
                "name": {"type": "string", "description": "study long name"},
                "documents": {
                  "type": "number",
                  "description": "length of documents in study"
                }
              }
            }
          ]
        },
        "button_text":{
          "type":"string",
          "description": "name of the document to be updated, row title"
        },
        "similar_documents": {
          "type": "array",
          "properties": {
            "name": {
              "type": "string",
              "decription": "name of the local file"
            },
            "rating": {
              "type": "number",
              "description": "floating point representing the string similarity (Dice's Coefficient) between the file name of the local file to the document name of an existing document",
              "examples": [0.04878048780487805]
            },
            "kfId": {
              "type": "string",
              "description": "kids first study file identifier",
              "examples": ["SF_7F2EW7WS"],
              "pattern": "^SF_[A-HJ-KM-NP-TV-Z0-9]{8}"
            }
          }
        }
  ]
}
