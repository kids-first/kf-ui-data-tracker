{
  "$id": "https://kf-ui-datatracker.kidsfirstdrc.org/event_schemas/STUDY_CARD/STUDY_CARD__TOGGLE_DETAIL.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "STUDY_CARD__TOGGLE_DETAIL",
  "type": "object",
  "description": "click event when a StudyCard detail is opened or closed",

  "properties": {
    "path": {
      "$ref": "http://kf-ui-data-tracker.kidsfirsrdrc.og/src/analyticsTracking/event_schemas/common_definitions.schema.json#/definitions/path"
    },
    "route": {
      "$ref": "http://kf-ui-data-tracker.kidsfirsrdrc.og/src/analyticsTracking/event_schemas/common_definitions.schema.json#/definitions/route"
    },
    "view": {
      "$ref": "http://kf-ui-data-tracker.kidsfirsrdrc.og/src/analyticsTracking/event_schemas/common_definitions.schema.json#/definitions/view"
    },
    "button_text": {
      "$ref": "http://kf-ui-data-tracker.kidsfirsrdrc.og/src/analyticsTracking/event_schemas/BUTTON/BUTTON__EVENT.schema.json#/properties/button_text"
    },
    "button_type": {
      "$ref": "http://kf-ui-data-tracker.kidsfirsrdrc.og/src/analyticsTracking/event_schemas/BUTTON/BUTTON__EVENT.schema.json#/properties/button_type"
    },
    "scope": {
      "type": "string",
      "description": "containing component name"
    },
    "study": {
      "allOf": [
        {
          "$ref": "http://kf-ui-data-tracker.kidsfirsrdrc.og/src/analyticsTracking/event_schemas/common_definitions.schema.json#/definitions/study"
        },
        {
          "properties": {
            "study_name": {
              "type": "string",
              "description": "study short name"
            },
            "files": {
              "type": "number",
              "description": "number of documents in the study"
            },
            "projects": {
              "type": "number",
              "description": "number of projects in the study"
            },
            "missing_info_fields": {
              "type": "number",
              "description": "nubmer of missing user-input meta fields for the study"
            }
          }
        }
      ],
      "required": ["kfId"]
    },
    "show_detail": {
      "type": "boolean",
      "description": "whether or not the details were open or closed on click"
    }
  },
  "required": ["show_detail", "study"]
}
