{
  "$id": "http://kf-ui-data-tracker.kidsfirstdrc.org/event_schemas/STUDY_CARD/STUDY_CARD__TOGGLE_DETAIL.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "STUDY_CARD__TOGGLE_DETAIL",
  "type": "object",
  "description": "click event when a StudyCard detail is opened or closed",
  "properties": {
    "path": {
      "$ref": "http://kf-ui-data-tracker.kidsfirstdrc.org/src/analyticsTracking/event_schemas/common_defs.schema.json#/definitions/path"
    },
    "route": {
      "$ref": "http://kf-ui-data-tracker.kidsfirstdrc.org/src/analyticsTracking/event_schemas/common_defs.schema.json#/definitions/route"
    },
    "view": {
      "$ref": "http://kf-ui-data-tracker.kidsfirstdrc.org/src/analyticsTracking/event_schemas/common_defs.schema.json#/definitions/view"
    },
    "button_text": {
      "$ref": "http://kf-ui-data-tracker.kidsfirstdrc.org/src/analyticsTracking/event_schemas/BUTTON/BUTTON_EVENT.schema.json#/definitions/button_text"
    },
    "button_type": {
      "$ref": "http://kf-ui-data-tracker.kidsfirstdrc.org/src/analyticsTracking/event_schemas/BUTTON/BUTTON_EVENT.schema.json#/definitions/button_type"
    },
    "link": {
      "$ref": "http://kf-ui-data-tracker.kidsfirstdrc.org/src/analyticsTracking/event_schemas/BUTTON/BUTTON_EVENT.schema.json#/definitions/link"
    },
    "scope": {"type": "string", "description": "containing component name"},
    "show_detail": {
      "type": "boolean",
      "description": "whether or not the details were open or closed on click"
    },
    "study": {
      "allOf": [
        {
          "$ref": "http://kf-ui-data-tracker.kidsfirstdrc.org/src/analyticsTracking/event_schemas/common_defs.schema.json#/properties/study"
        },
        {
          "properties": {
            "study_name": {
              "type": "string",
              "description": "study short list"
            },
            "files": {
              "type": "integer",
              "description": "number of documents in the study"
            },
            "projects": {
              "type": "integer",
              "description": "integer of projects in the study"
            },
            "missing_info_fields": {
              "type": "integer",
              "description": "nubmer of missing user-input meta fields for the study"
            }
          },
          "required": ["kfId"]
        }
      ]
    }
  },
  "additionalProperties": false
}
