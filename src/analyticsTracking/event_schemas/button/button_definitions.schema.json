{
  "$id": "https://example.com/MOUSE__CLICK.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BUTTON__* common event schema properties",
  "description": "passed to all button events and derivatives",
  "type": "object",
  "definitions": {
    "button_text": {
      "type": "string",
      "description": "Text shown to the user at time of event."
    },
    "link": {
      "type": "string",
      "format": "uri",
      "description": "Button/Anchor [href] value"
    },
    "button_type": {
      "type": "string",
      "description": "If it is not an obvious button specify the type (label, toggle, icon, etc)"
    }
  },

  "allOf": [
    {"$ref": "/common_defintions.json#/path"},
    {"$ref": "/common_defintions.schema.json#/route"},
    {"$ref": "/common_defintions.schema.json#/view"},
    {"$ref": "#button_text"},
    {"$ref": "#link"},
    {"$ref": "#button_type"}
  ]
}
